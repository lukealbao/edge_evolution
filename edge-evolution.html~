	<script type="text/javascript">
			$(function () {
				var loadArticle = function(e) {
					// Receives an event object whose target.id is a string
					// and prepends a hashmark, then loads that article in
					// div#stage.
					var articleId = e.target.id === "" ||  // via loadArticleFromHash
									e.target.id === "logo" ?  // via click
										"#splash" :
						 			"#" + e.target.id + "-text";
					$(".active").removeClass("active")
								.addClass("inactive");
					$(articleId).addClass("active")
								.removeClass("inactive");
				};

				var loadArticleFromHash = function() {
					// Called on document.ready. Loads article into div#stage
					// via url and enables direct linking to articles -- better 
					// accessibility and search engine indexing.
					var articleId = window.location.hash.replace("#", "");
					loadArticle({target: {id: articleId}}); // Probably a better way.
				};

				var fillHeaderBackground = function() {
					// Animate #header background to hide scrolling articles.
					$(window).scrollTop() > 56 ?
						$('header').css('background-position', '0px 0px') :
					$('header').css('background-position', '0px -72px');
				};

				// Attach handlers
				$.map( $(".navigation, #logo"), 
					   function() {
						   	$(this).on("click", loadArticle);
						});
				$(document).ready(loadArticleFromHash);
				$(window).scroll(fillHeaderBackground);
			});
	</script>
